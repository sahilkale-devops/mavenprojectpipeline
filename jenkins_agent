pipeline
{
    agent any
    stages
    {
        stage("scm checkout")
        {
            agent { label 'MAVEN' }
            steps
            {
                 git branch: 'master', url: 'https://github.com/sahilkale-devops/mavenprojectpipeline.git'

            }
        }
        stage("compile the code")
        {

            agent { label 'MAVEN' }
            steps
            {
                
                withMaven(globalMavenSettingsConfig: '', jdk: 'JDK_home', maven: 'JAVA_SLAVE', mavenSettingsConfig: '', traceability: true)
                {sh 'mvn compile'}
            }
        }

        stage("unit test framework")
        {

            agent { label 'MAVEN' }
            steps
            {
                withMaven(globalMavenSettingsConfig: '', jdk: 'JDK_home', maven: 'JAVA_SLAVE', mavenSettingsConfig: '', traceability: true)
                {sh 'mvn test'}
            }
        }
        
        stage("code build")
        {

            agent { label 'MAVEN' }
            steps
            {
                withMaven(globalMavenSettingsConfig: '', jdk: 'JDK_home', maven: 'JAVA_SLAVE', mavenSettingsConfig: '', traceability: true)
                {sh 'mvn package'}
            }
        }
         
        
    }
}
